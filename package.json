{
  "name": "spell-lint-ko",
  "displayName": "SpellLint-KO",
  "description": "Linting for Korean spelling and conversion to polite (-yo) form",
  "version": "0.0.1",
  "license": "GPL-3.0-only",
  "homepage": "https://github.com/Jeong-jeong",
  "repository": {
    "type": "git",
    "url": "git@github.com:Jeong-jeong/SpellLint-KO.git"
  },
  "author": "Jeong-jeong <kimm.jeongs@gmail.com>",
  "publisher": "Jeong-jeong",
  "bugs": {
    "url": "https://github.com/Jeong-jeong/SpellLint-KO/issues"
  },
  "keywords": [
    "spell",
    "lint",
    "korean",
    "ko",
    "hunspell",
    "language",
    "한국어",
    "한글",
    "맞춤법",
    "문법",
    "해요체"
  ],
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:plaintext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "SpellLint-KO.checkSpelling",
        "title": "Check Korean Spelling"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rimraf out",
    "pretest": "pnpm run clean && pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "test": "vscode-test",
    "mocha-test": "mocha out/test/**/*.test.js"
  },
  "devDependencies": {
    "@types/chai": "4.3.3",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/sinon": "17.0.3",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "chai": "4.5.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "fs-extra": "^11.2.0",
    "mocha": "^10.7.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "sinon": "17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "glob": "7.2.0",
    "hunspell-asm": "^4.0.2"
  }
}
